int calculator (int answer, int num55, int num66, char ops) {
    int ans=0;
    if(ops == '+'){
     ans = num55 + num66;
    } else if (ops == '-'){
        ans = num55 - num66;
    } else if (ops == '/'){
        ans = num55 / num66;
    } else if (ops == '*'){
        ans = num55 * num66;
        //cout<<ans;
    } else{
      cout<<"Invalid Operation";  
    }
    cout<<"YOUR ANSWER IS\n";
    cout<<ans<<"\n\n";
    return(answer);
}








