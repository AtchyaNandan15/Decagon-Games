int calculator (int answer, int num55, int num66, char ops) {
    int ans=0;
    if(ops == '+'){
     ans = num55 + num66;
    } else if (ops == '-'){
        ans = num55 - num66;
    } else if (ops == '/'){
        ans = num55 / num66;
    } else if (ops == '*'){
        ans = num55 * num66;
        //cout<<ans;
    } else{
      cout<<"Invalid Operation";  
    }
    cout<<"YOUR ANSWER IS\n";
    cout<<ans<<"\n\n";
    return(answer);
    
    
}

string translator (string& change){

int len;
int i;

len=change.length();
for(i=0;i<len;i++){
    
if(change[i]=='a'){
    change[i]='~';
}

if(change[i]=='b'){
    change[i]='@';
}

if(change[i]=='c'){
    change[i]='#';
}

if(change[i]=='d'){
    change[i]='$';
}

if(change[i]=='e'){
    change[i]='%';
}

if(change[i]=='f'){
    change[i]='^';
}

if(change[i]=='g'){
    change[i]='&';
}

if(change[i]=='h'){
    change[i]='*';
}

if(change[i]=='i'){
    change[i]='(';
}

if(change[i]=='j'){
    change[i]=')';
}

if(change[i]=='k'){
    change[i]='_';
}

if(change[i]=='l'){
    change[i]='-';
}

if(change[i]=='m'){
    change[i]='+';
}

if(change[i]=='n'){
    change[i]='=';
}

if(change[i]=='o'){
    change[i]='[';
}

if(change[i]=='p'){
    change[i]=':';
}

if(change[i]=='q'){
    change[i]='<';
}

if(change[i]=='r'){
    change[i]='?';
}

if(change[i]=='s'){
    change[i]=';';
}

if(change[i]=='t'){
    change[i]=',';
}

if(change[i]=='u'){
    change[i]='.';
}

if(change[i]=='v'){
    change[i]='|';
}

if(change[i]=='w'){
    change[i]='}';
}

if(change[i]=='x'){
    change[i]=']';
}

if(change[i]=='y'){
    change[i]='/';
}

if(change[i]=='z'){
    change[i]='>';
}

   }
}

    



    
    
    
    
    
    


    
    
    
    









