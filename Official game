        int guessingGame (int guess){
            cout<<"WELCOME TO THE GUESSING GAME\n\n";
                 

               int secretNum = (time(0)%10) + 1;
  int guessNum;
  int guessCount =0;
  int guessLimit = 3;
  bool outOfGuess = false;
       

   do{
       
       if ( guessCount < guessLimit) {
           if (guessCount != 0) {
              cout << "Your guess is wrong. Try again" << endl;
           }
          cout<<"Guess a number between 1 to 10: ";
          cin>>guessNum;
          guessCount++;
       } else {
          outOfGuess  = true;
       }
   
   }while((guessNum != secretNum) && (!outOfGuess));
   
    if(outOfGuess){
        cout<<"YOU Lose; Secret Number is "<<secretNum<<endl;
    } else {
        cout<<"YOU WON"<<endl;
    }
                    system("cls");

             
             
        }


int quiz(int& quizzes){
	
	                 

	
	int num2;
	
	
	cout<<"WELCOME TO THE MATH QUIZ \n\n";
	
	cout<<"Enter your password ";
	cin>>num2;
	 int points;
	 int num1;
	 
	
	
	if(num2==1234) {
		
		
		cout<<"What is 5 + 5";
		cin>>num1;
		
		
		if(num1==10){
			cout<<"YOUR CORRECT";
			points++;
		}
		else{
			cout<<"WRONG";
		}
		
		
		
		
		
				cout<<"What is 2 + 27";
		cin>>num1;
		
		
		if(num1==29){
			cout<<"YOUR CORRECT ";
			points++;
		}
		else{
			cout<<"WRONG ";
		}
		
		
				cout<<"What is 3*5 ";
		cin>>num1;
		
		
		if(num1==15){
			cout<<"YOUR CORRECT ";
			points++;
		}
		else{
			cout<<"WRONG ";
		}
		
				cout<<"What is 100 / 5 ";
		cin>>num1;
		
		
		if(num1==20){
			cout<<"YOUR CORRECT ";
			points++;
		}
		else{
			cout<<"WRONG ";
		}
		
		
		
				cout<<"What is 15 + 7 ";
		cin>>num1;
		
		
		if(num1==22){
			cout<<"YOUR CORRECT ";
			points++;
		}
		else{
			cout<<"WRONG ";
		}
		
		
		cout<<" YOUR TOTAL POINTS ARE "<<points<<"\n";
		
		
} 
}
	
